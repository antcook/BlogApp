<div class="admin-page">
<div class="container">

   <h2 class="admin-heading">Add A New Post</h2>

<form class="main" action="" method="post" autocomplete="off">


    {{#if message}}
        <div class="success">{{{message}}}</div>
    {{/if}}

    <label for="title">Title</label>
    <input class="title" type="text" name="title">

    <label for="url">URL</label>
    <input class="url" type="text" name="url">

    <label for="Author">Author</label>
    <input type="text" name="author" value="{{user.firstName}} {{user.lastName}}">

    <textarea type="text" name="content"></textarea>

    <input type="submit" class="submit" value="Create Post">
  
</form>

</div>

</div>

<script type="text/javascript" src="/scripts/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
tinymce.init({
    selector: "textarea",
    menubar : false,
    theme: "modern",
    skin: 'light',
    statusbar: false
 });
</script>